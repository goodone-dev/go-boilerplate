# Application Configuration
APP_NAME=goodmart-api               # Name of the application
APP_PORT=8080                       # Port on which the application will run
APP_ENV=local                       # Environment (local, development, staging, production)
APP_URL=http://localhost:8080       # Base URL of the application

# Distributed Tracing Configuration
TRACER_ENABLED=true                 # Enable/disable distributed tracing
TRACER_EXPORTER_HOST=localhost      # Host of the tracing exporter (e.g., Jaeger, OpenTelemetry)
TRACER_EXPORTER_PORT=4318           # Port of the tracing exporter

# Logging Configuration
LOGGER_ENABLED=true                 # Enable/disable logging
LOGGER_EXPORTER_HOST=localhost      # Host of the log exporter (e.g., Loki, ELK)
LOGGER_EXPORTER_PORT=4318           # Port of the log exporter

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost             # Database host
POSTGRES_USERNAME=user              # Database username
POSTGRES_PASSWORD=password          # Database password
POSTGRES_PORT=5432                  # Database port
POSTGRES_SSL_MODE=disable           # SSL mode (disable, require, verify-ca, verify-full)
POSTGRES_DATABASE=goodmart-db       # Database name
POSTGRES_AUTO_MIGRATE=true          # Auto-run database migrations on startup

# Redis Configuration
REDIS_HOST=localhost                # Redis server host
REDIS_PORT=6379                     # Redis server port
REDIS_TLS=false                     # Enable/disable TLS encryption
REDIS_PASSWORD=password             # Redis authentication password
REDIS_DB=0                          # Redis database number (0-15)

# Email Configuration
MAIL_HOST=localhost                 # SMTP server host
MAIL_PORT=1025                      # SMTP server port (1025 is default for mailhog in development)
MAIL_USERNAME=no-reply@goodmart.com # SMTP authentication username
MAIL_PASSWORD=''                    # SMTP authentication password (empty for local development)
MAIL_TLS=false                      # Enable/disable TLS encryption
